
article
  // 清容器内首尾元素外边距
  &,
  section,
  td
    > *:first-child
      margin-block-start: 0 !important
    > *:last-child
      margin-block-end: 0 !important
  // 定义块级元素样式
  blockquote
    margin-block-start: 12px
    margin-block-end: 24px
    margin-inline-start: (16px * 2)
    margin-inline-end: (16px * 2)
    padding-block-start: 12px
    padding-block-end: 12px
    padding-inline-start: 16px
    padding-inline-end: 16px
    background-color: hsla(0, 0%, 0%, 0.054)
    darkmode-style()
  figure
    display: block
    text-align: center
    > img
      display: block
      margin-inline-start: auto
      margin-inline-end: auto
  hr
    width: 30%
    height: 1px
    margin-block-start: (24px * 2)
    margin-block-end: (24px * 2 - 1px)
    margin-inline-start: auto
    margin-inline-end: auto
    border: 0
    background-color: hsl(0, 0%, 80%)
    darkmode-style()
  p
    margin-block-start: 12px
    margin-block-end: 24px
    text-align: justify
    non-cjk-block()
  pre
    margin-block-start: 12px
    margin-block-end: 12px
    margin-inline-start: 0
    margin-inline-end: 0
    padding-block-start: 12px
    padding-block-end: 12px
    padding-inline-start: 16px
    padding-inline-end: 16px
    overflow: auto
    font-family: $font-family-mono
    white-space: pre
    word-wrap: normal
    border-radius: 4px
    background-color: hsla(0, 0%, 0%, 0.054)
    darkmode-style()
    code
      margin: 0
      padding: 0
      border: 0
      border-radius: 0
      background-color: transparent
      color: inherit