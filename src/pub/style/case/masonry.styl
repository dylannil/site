    &-foot
      position absolute
      left 0
      right 0
      bottom 0
      line-height 21px
      padding 0 8px
      display flex
      justify-content space-between
    &-word
      text-transform uppercase
      font-size .9em
      font-weight bold
      > span
        margin-left 4px
    &:hover
      .masonry-tile-mask
        visibility visible
        opacity 1
      .masonry-tile-info
        visibility visible
        transform scale(1)
