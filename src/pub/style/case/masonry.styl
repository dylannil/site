



.masonry
  display flex
  align-items flex-start
  justify-content space-between
  &-lane
    display none
    flex 1 0 0
    margin-left 16px
    &:first-child
      display block
      margin-left 0
  &-tile
    margin 16px 0
    cursor pointer
    // background-color #efefef
    // background-color #6f5b4d
    // background-color #292d36
    // background-color #a097d8
    position relative
    overflow hidden
    &-back
      background-color #efefef
      border-radius 16px
      overflow hidden
      min-height 100px
      position relative
      > img
        width 100%
      > .masonry-tile-mask
        background-color rgba(0, 0, 0, .6)
        position absolute
        top 0
        right 0
        bottom 0
        left 0
        visibility hidden
        opacity 0
        transition-timing-function cubic-bezier(0.24, 0.22, 0.015, 1.56)
        transition-duration .2s
        transition-property visibility, opacity
        > .masonry-tile-type
          position absolute
          top 15px
          right -25px
          transform rotate(45deg)
          height 20px
          line-height 20px
          text-align center
          width 100px
          background-color red
          color white
          text-transform uppercase
    &-info
      color white
      position absolute
      top 0
      right 0
      bottom 0
      left 0
      display flex
      flex-direction column
      justify-content center
      align-items center
      background-color transparent
      -webkit-tap-highlight-color none
      visibility hidden
      transform scale(0)
      transition-timing-function cubic-bezier(0.24, 0.22, 0.015, 1.56)
      transition-duration .2s
      transition-property visibility, transform
      > p
        margin 10px 0
        padding 0 24px
    &-priv
      position absolute
      top 0
      left 0
      width 0
      height 0
      border 3px solid transparent
      border-top-color #F66A0A
      border-left-color #F66A0A
    &-head
      position absolute
      top 0
      right 0
      left 0
      padding 4px
      > a
        display inline-block
        vertical-align -10%
        width 24px
        height 24px
        background-color #44d1f4
        -webkit-mask no-repeat 50% 50%/24px 24px
