// 用户操作相关样式

// 登录、注册、密码重置等表单
.user-form
  // @extends .abs-center
  width: 440px;
  max-width: 100%;
  padding: 80px 40px;
  box-sizing: border-box;
  border-radius: 10px;
  /.form-header
    text-align center
    margin-bottom 24px
    > div
      height 80px
    > h1
      font-weight 400
      font-size 24px
      line-height 1.3333
      margin 0
      padding-top 16px
    > h2
      font-weight 400
      font-size 16px
      line-height 1.5
      margin 0
      padding-top 8px
  > label
    border-bottom: 1px solid #dadce0;
    margin: 30px 0;
    position: relative;
    display: block;
    > input
      font-size: 15px;
      color: #333333;
      border: none;
      width: 100%;
      outline: none;
      background: none;
      padding: 0;
      height: 40px;
    &::before
      content: attr(data-text);
      display: block;
      position: absolute;
      top: 50%;
      left: 0;
      color: #343434;
      opacity: .6;
      line-height: 0;
      transition: all .3s ease;
    &::after
      content: "";
      display: block;
      position: absolute;
      left: 0;
      bottom: -1px;
      width: 0%;
      height: 1px;
      background-color #1a73e8
      transition: width .3s ease;
    &.focus::before
      top: -5px;
      opacity: 1;
      font-size: .8em;
    &.focus::after
      width: 100%;
    &.error::before
      color red
  > hr
    width 4px
    height 4px
    border none
    background-color rgba(136, 136, 136, .3)
    box-shadow -10px 0 0 0 rgba(136, 136, 136, .3), 10px 0 0 0 rgba(136, 136, 136, .3)
    // border-top: 8px solid #858585;
    // border-left: 5px solid transparent;
    // border-right: 5px solid transparent;
  > input[type="submit"]
    display block
    margin 50px auto
    width 40%
    height 36px
    border-radius 3px
    border none
    outline none
    color white
    background-color #1a73e8
    background-size 200%
    cursor pointer
    transition background-position .3s linear
    &:hover
      background-color #6200ee
  > p
    margin: 50px 0;
    font-size: 13px;
    text-align: center;
    > span
      cursor pointer
      color #1a73e8
      &:hover
        color #6200ee
