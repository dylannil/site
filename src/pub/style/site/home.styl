



.home
  width 42em
  margin 0 auto
  &-banner
    &-hello
      font-family sans-serif
  &-panel
    // min-height 100vh
    padding 128px 24px
    text-align center
    @media (max-width: 767px)
      padding 56px 24px
    > p
      margin-bottom 40px
      line-height 20px
      font-size 14px
    > a
      min-width 136px
      height 40px
      line-height 40px
      text-align center
      border-radius 20px
      display inline-block
      font-size 16px
      box-sizing content-box
      border 2px solid black

.site
  position relative
  user-select none
  &-hello
    font-size: 60px;
    font-weight: bold;
    letter-spacing: 7px;
    line-height: 1.3;
    > span
      color gray
  &-short
    text-align right
    padding: 40px 0;
    font-weight: bold;
    line-height 1.6
    > span 
      color gray
    &-greet
      cursor pointer
      text-decoration underline
  &-greet
    position: absolute;
    top: 0;
    right: 10px;
    writing-mode: tb;
    font-weight: bold;
    letter-spacing: 4px;
    cursor: pointer;
  &-panel
    padding 128px 0
    text-align center
    @media (max-width: 767px)
      padding 56px 0
    > p
      margin-bottom 40px
      line-height 20px
      font-size 14px
    > a
      min-width 136px
      height 40px
      line-height 40px
      text-align center
      display inline-block
      font-size 16px
      box-sizing content-box
      border 2px solid black
      color inherit