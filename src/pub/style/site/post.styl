


.post
  &-list
    padding-left 0
  &-item
    padding 20px 0
    position relative
    border-bottom 1px solid #F0F0F0
    line-height 20px
    &-tags
      font-size .8em
      float right
      margin-left 8px
      > span
        border 1px solid black
        padding 0 4px
        text-transform uppercase
    > h3
      line-height 1.5
      margin-top 0
      margin-bottom 4px
      > a
        color inherit
        display block
        &:hover
          text-decoration underline
    > p
      margin: 0 0 8px;
      font-size: 13px;
      line-height: 24px;
      color: #565656;
    &-foot
      display flex
      font-size .8em
      color #a5a5a5
      > div
        margin-right 4px